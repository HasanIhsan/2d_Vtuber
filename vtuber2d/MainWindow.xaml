<Window x:Class="vtuber2d.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vtuber2d"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="inputDevicesComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <!-- The items will be added dynamically in code-behind -->
        </ComboBox>
        <Button Content="Select Input Device" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Click="SelectInputDevice_Click"/>
        <Label x:Name="audioLabel" Content="Audio Detected" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" Visibility="Hidden"/>
    </Grid>
</Window>
